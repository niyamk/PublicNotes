@model IEnumerable<PublicNotes.Models.Note>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div style="display: inline-block; text-align: left; min-width: 50%;">
        
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group mb-2">
                <label for="Title" class="control-label">Title</label>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label for="Content" class="control-label">Note Content</label>
                <textarea name="Content" class="form-control" rows="3" style="resize: both; min-width: 100%;"></textarea>
            </div>
            
            <div class="form-group text-end mt-3">
                <input type="submit" value="Post Note" class="btn btn-primary" />
            </div>
        </form>

    </div> 
</div>
<hr />

<div class="text-center mb-3">
    <h2>All Notes</h2>
</div>

<div style="column-width: 320px; column-gap: 1rem;">
    @foreach (var note in Model)
    {
        <div class="card mb-3 rounded-3 bg-dark border" style="break-inside: avoid; width: 100%;">
            
            <div class="card-header border-0">
                <h5 class="card-title mb-0">@note.Title</h5>
            </div>

            <div class="card-body">
                <p class="card-text" style="white-space: pre-wrap;">@note.Content</p>
            </div>

            <div class="card-footer border-0 d-flex justify-content-between align-items-center">
                <span>
                    Posted on: @note.CreatedAt.ToShortDateString()
                </span>
                
                <div class="d-flex">
                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-secondary btn-sm me-2">Edit</a>
                    <form asp-action="Delete" method="post" asp-route-id="@note.Id" class="mb-0">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                    </form>
                </div>
            </div>
        </div>
    }
</div>
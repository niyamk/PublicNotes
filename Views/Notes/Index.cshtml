@model IEnumerable<PublicNotes.Models.Note>

@{
    ViewData["Title"] = "Public Notes";
}

<div class="text-center">
    <h1 class="display-4">Public Note Board</h1>
    <p>Write a note and it will be visible to everyone!</p>
</div>

<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group mb-2">
                <label for="Title" class="control-label">Title</label>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label for="Content" class="control-label">Note Content</label>
                <textarea name="Content" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Post Note" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <h2 class="text-center">All Notes</h2>
    @foreach (var note in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@note.Title</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@note.Content</p>
                </div>
                <div class="card-footer text-muted">
                    Posted on: @note.CreatedAt.ToShortDateString()
                </div>
            </div>
        </div>
    }
</div>